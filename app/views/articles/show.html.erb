<div class="title">
<h1><%=@article.title%></h1>
<%= link_to edit_article_path(@article) do %>
  <%= fa_icon "pencil" %>
<% end %>
<%= link_to article_path(@article), method: :delete, data: { confirm: "Are you sure?" } do %>
  <%= fa_icon "trash"  %>
<% end %>
</div>
<div class='articleDetail'>
  <p><%=@article.content%></p>
</div>
