<h1>My articles</h1>

<ul>
  <% @articles.each do |article| %>
    <li>
      <%= link_to(article.title, article_path(article))%>
      <%= link_to article_path(article), method: :delete, data: { confirm: "Are you sure?" } do %>
        <%= fa_icon "trash"  %>
      <% end %>
    </li>
  <% end %>
</ul>

<%= link_to  "+ Add a new Article", new_article_path %>
